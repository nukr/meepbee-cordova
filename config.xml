<?xml version='1.0' encoding='utf-8'?>
<widget id="com.meepshop.meepbee" version="0.0.7" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>meepBee</name>
    <description>
      Meepbee selling goods platform
    </description>
    <author email="service@meepbee.com" href="http://meepbee.com">
      Nukr
    </author>

    <icon src="www/icon.png" />


    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />





    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="www/icon.png" />
        <icon density="mdpi" src="www/icon.png" />
        <icon density="hdpi" src="www/icon.png" />
        <icon density="xhdpi" src="www/icon.png" />
        <splash density="port-hdpi" src="www/login_bg.png" />
        <splash density="port-ldpi" src="www/login_bg.png" />
        <splash density="port-mdpi" src="www/login_bg.png" />
        <splash density="port-xhdpi" src="www/login_bg.png" />
    </platform>


    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>


    <preference name="orientation" value="portrait" />
    <preference name="SplashScreen" value="login_bg.png" />
    <perference name="SplashScreenDelay" value="10000" />
    <preference name="AndroidExtraFilesystems" value="files,files-external,documents,sdcard,cache,cache-external,root" />
    <preference name="AndroidPersistentFileLocation" value="Internal" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
</widget>
